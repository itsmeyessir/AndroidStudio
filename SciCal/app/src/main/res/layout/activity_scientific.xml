<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ScientificActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"/>

    <!-- Display -->
    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@android:color/black"
        android:gravity="end|bottom"
        android:padding="0dp"
        android:text="@string/_0"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfway_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <!-- Scientific Buttons Grid -->
    <GridLayout
        android:id="@+id/scientific_buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:columnCount="6"
        android:rowCount="5"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintBottom_toTopOf="@+id/halfway_guideline"
        app:layout_constraintVertical_bias="0.0">

        <!-- First Row -->
        <Button android:id="@+id/button_paren_left" android:text="@string/left_parenthesis" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_paren_right" android:text="@string/right_parenthesis" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_mc" android:text="@string/memory_clear" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_mplus" android:text="@string/memory_add" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_mminus" android:text="@string/memory_subtract" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_mr" android:text="@string/memory_recall" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>

        <!-- Second Row -->
        <Button android:id="@+id/button_2nd" android:text="@string/_2nd" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_x2" android:text="@string/x_squared" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_x3" android:text="@string/x_cubed" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_xy" android:text="@string/x_to_the_power_of_y" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_ex" android:text="@string/e_to_the_power_of_x" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_10x" android:text="@string/_10_to_the_power_of_x" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>

        <!-- Third Row -->
        <Button android:id="@+id/button_inv" android:text="@string/reciprocal_of_x" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_sqrt" android:text="@string/square_root_of_x" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_cbrt" android:text="@string/cube_root_of_x" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_yroot" android:text="@string/y_th_root_of_x" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_ln" android:text="@string/ln" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_log" android:text="@string/base_10_logarithm" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>

        <!-- Fourth Row -->
        <Button android:id="@+id/button_fact" android:text="@string/x_factorial" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_sin" android:text="@string/sin" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_cos" android:text="@string/cos" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_tan" android:text="@string/tan" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_e" android:text="@string/euler" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_ee" android:text="@string/enter_exponent" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>

        <!-- Fifth Row -->
        <Button android:id="@+id/button_rand" android:text="@string/random_num" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_sinh" android:text="@string/sinh" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_cosh" android:text="@string/cosh" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_tanh" android:text="@string/tanh" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_pi" android:text="@string/pi" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
        <Button android:id="@+id/button_rad" android:text="@string/rad" style="@style/CalculatorButtonScientific" android:layout_width="0dp" android:layout_height="0dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_gravity="fill" android:backgroundTint="@null" android:padding="3dp" android:textSize="12sp"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/halfway_guideline"
        app:layout_constraintVertical_bias="0.0">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button_ac"
            style="@style/CalculatorButtonLight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/ac"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_light_background"/>

        <Button
            android:id="@+id/button_plus_minus"
            style="@style/CalculatorButtonLight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/plus_minus"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_light_background"/>

        <Button
            android:id="@+id/button_percent"
            style="@style/CalculatorButtonLight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/percent"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_light_background"/>

        <Button
            android:id="@+id/button_divide"
            style="@style/CalculatorButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/divide"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_orange_background"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/button_7"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_7"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_8"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_8"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_9"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_9"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_multiply"
            style="@style/CalculatorButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/multiply"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_orange_background"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/button_4"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_4"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_5"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_5"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_6"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_6"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_minus"
            style="@style/CalculatorButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/subtract"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_orange_background"/>

        <!-- Row 4 -->
        <Button
            android:id="@+id/button_1"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_1"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_2"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_2"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_3"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_3"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_plus"
            style="@style/CalculatorButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/add"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_orange_background"/>

        <!-- Row 5 -->
        <ImageButton
            android:id="@+id/button_sci_mode"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:contentDescription="@string/mode_switch"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_calculator"
            app:tint="@android:color/white"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_0"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/_0"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_dot"
            style="@style/CalculatorButtonDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/dot"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_dark_background"/>

        <Button
            android:id="@+id/button_equal"
            style="@style/CalculatorButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@null"
            android:text="@string/equal"
            android:textSize="12sp"
            android:background="@drawable/squircle_button_orange_background"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
