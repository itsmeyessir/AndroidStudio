<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SciCal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- âœ… Override all Material 2 colors to stop purple from leaking in -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
    </style>


    <style name="Theme.SciCal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- General background -->
        <item name="android:colorBackground">#000000</item> <!-- or whatever bg you want -->

        <!-- Primary and secondary colors for buttons, toggles, etc. -->
        <item name="colorPrimary">#505050</item>         <!-- For dark buttons -->
        <item name="colorSecondary">#FF9500</item>       <!-- For orange operator buttons -->

        <!-- Text colors -->
        <item name="android:textColor">#FFFFFF</item>    <!-- Can apply to TextViews, etc -->

        <!-- Surface/background for cards/dialogs -->
        <item name="colorSurface">#121212</item>

        <!-- Optional: Override other Material components -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
    </style>

</resources>